{
    "types": "recrypt-wasm-binding.d.ts",
    "scripts": {
        "test": "node tests/testRunner",
        "testInBrowser": "WEBPACK_MODE=test webpack-dev-server --config webpack.config.js",
        "fixBindgenShim": "node fixBindgenShim.js ./target",
        "cargoBuild": "cargo build --release --target wasm32-unknown-unknown",
        "generateBindgenShim": "wasm-bindgen target/wasm32-unknown-unknown/release/recrypt_wasm_binding.wasm --browser --out-dir target --remove-name-section",
        "compile": "yarn run cargoBuild && yarn run generateBindgenShim && yarn run fixBindgenShim",
        "benchmark": "WEBPACK_MODE=benchmark webpack-dev-server --config webpack.config.js --compress",
        "pack": "wasm-pack build --target browser --scope ironcorelabs --no-typescript"
    },
    "devDependencies": {
        "html-webpack-include-assets-plugin": "^1.0.6",
        "html-webpack-plugin": "^3.2.0",
        "puppeteer": "^1.11.0",
        "shelljs": "^0.8.3",
        "text-encoding": "^0.7.0",
        "ts-loader": "^5.3.1",
        "typescript": "^3.2.2",
        "webpack": "^4.27.1",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.10"
    },
    "prettier": {
        "printWidth": 160,
        "tabWidth": 4,
        "trailingComma": "es5",
        "bracketSpacing": false,
        "jsxBracketSameLine": true,
        "arrowParens": "always"
    }
}
